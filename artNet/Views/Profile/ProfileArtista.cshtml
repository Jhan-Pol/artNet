    @model IEnumerable<artNet.Models.MuralViewModel>
    <!DOCTYPE html>
    <html lang="en" data-theme="dark">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Street Art Gallery - Artist Profile</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/EstiloPerfilArtista.css">
    </head>
    <body>
        <div class="container-fluid p-0">
            <header class="profile-header text-white position-relative rainbow-bg">
                <div class="overlay gradient-overlay"></div>
                <div class="container position-relative py-5">
                    <div class="row align-items-center">
                        <div class="col-md-3 text-center">
                            <div class="profile-img-container">
                                <img src="https://images.unsplash.com/photo-1618316508974-cd31927b1d' alt="Artist Profile" class="profile-img">
                            </div>
                        </div>
                        <div class="col-md-9">
                            <h1 class="display-4 fw-bold">Miguel Rivera</h1>
                            <p class="lead">Contemporary Urban Artist | Muralist | Installation Artist</p>
                            <p class="artist-bio">Transforming urban spaces into vibrant stories since 2010</p>
                            <div class="d-flex gap-3 mt-3">
                                <button class="btn btn-glow btn-primary-gradient">Commission Work</button>
                                <button class="btn btn-glow btn-secondary-gradient">View Gallery</button>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <main class="container py-5">
                <div class="row g-4">
                    <div class="col-lg-8">
                        <section class="card profile-card rainbow-border">
                            <div class="card-body">
                                <h2>Artist Statement</h2>
                                <p class="lead">My work explores the intersection of urban culture, social justice, and environmental awareness through large-scale murals and installations.</p>
                                <div class="mt-4">
                                    <h3>Featured Murals</h3>
                                    <div class="row g-4">
                                        <div class="col-md-6">
                                            <div class="mural-card">
                                                <img src="https://images.unsplash.com/photo-1499781350541-7783f6c6a0c8" alt="Urban Hope Mural" class="img-fluid rounded">
                                                <div class="mural-info mt-2">
                                                    <h4>Urban Hope</h4>
                                                    <p>Downtown Art District, 2023</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mural-card">
                                                <img src="https://images.unsplash.com/photo-1571115764595-644a1f56a55c" alt="Nature's Embrace" class="img-fluid rounded">
                                                <div class="mural-info mt-2">
                                                    <h4>Nature's Embrace</h4>
                                                    <p>Community Center, 2022</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-4">
                                    <h3>Recent Exhibitions</h3>
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item">Urban Art Biennale - New York, 2023</li>
                                        <li class="list-group-item">Street Art Festival - Berlin, 2022</li>
                                        <li class="list-group-item">Contemporary Muralism - Mexico City, 2022</li>
                                    </ul>
                                </div>
                            </div>
                        </section>
                    </div>
                    <div class="col-lg-4">
                        <section class="card contact-card">
                            <div class="card-body">
                                <h3>Contact & Commissions</h3>
                                <ul class="list-unstyled">
                                    <li class="mb-3"><i class="bi bi-envelope me-2"></i>miguel@riveraarts.com</li>
                                    <li class="mb-3"><i class="bi bi-geo-alt me-2"></i>Based in Barcelona, Spain</li>
                                    <li class="mb-3"><i class="bi bi-instagram me-2"></i></li>
                                    <li class="mb-3"><i class="bi bi-palette me-2"></i>Available for worldwide projects</li>
                                </ul>
                            </div>
                        </section>
                        <section class="card mt-4 awards-card">
                            <div class="card-body">
                                <h3>Awards & Recognition</h3>
                                <ul class="list-unstyled">
                                    <li class="mb-2">🏆 Urban Art Excellence Award 2023</li>
                                    <li class="mb-2">🎨 Best Mural Design - Street Art Festival</li>
                                    <li class="mb-2">📚 Featured in "Contemporary Urban Artists"</li>
                                </ul>
                            </div>
                        </section>
                        <section class="card mt-4 stats-card">
                            <div class="card-body">
                                <h3>Career Highlights</h3>
                                <div class="row text-center g-3">
                                    <div class="col-4">
                                        <div class="stat-item">
                                            <h4>45+</h4>
                                            <p>Murals</p>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="stat-item">
                                            <h4>12</h4>
                                            <p>Countries</p>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="stat-item">
                                            <h4>8</h4>
                                            <p>Awards</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </main>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
    </html>
<!-- Header -->
<div class="text-white p-4 rounded" style="background: linear-gradient(to right, #8e2de2, #4a00e0); position: relative;">
    <img src="~/images/profile.jpg" alt="Profile Picture" class="rounded-circle" style="width: 120px; position: absolute; top: -60px; left: 20px;">
    <div class="ms-5 ps-5 pt-3">
        <h2>Urban Canvas</h2>
        <p>Street Artist | Muralist</p>
        <button class="btn btn-outline-light btn-sm me-2">Edit Profile</button>
        <label class="form-check-label text-white">
            <input type="checkbox" class="form-check-input"> Dark Mode
        </label>
    </div>
</div>

<!-- Main Sections -->
<div class="row mt-5">

    <!-- About Me -->
    <div class="col-md-8 mb-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">About Me</h5>
                <p class="card-text">
                    Urban artist specializing in large-scale murals and street installations.
                    Creating art that speaks to the soul of the city.
                </p>
                <div class="d-flex justify-content-between">
                    <img src="~/images/artwork1.jpg" alt="Artwork 1" width="100">
                    <img src="~/images/artwork2.jpg" alt="Artwork 2" width="100">
                    <img src="~/images/artwork3.jpg" alt="Artwork 3" width="100">
                </div>
            </div>
        </div>
    </div>

    <!-- Contact & Social -->
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm mb-3">
            <div class="card-body">
                <h5 class="card-title">Contact & Social</h5>
                <p><i class="bi bi-envelope"></i> artist@urbancanvas.com</p>
                <p><i class="bi bi-geo-alt"></i> Street Art District, NYC</p>
                <p><i class="bi bi-instagram"></i> urbancanvas</p>
            </div>
        </div>

        <!-- Statistics -->
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title">Statistics</h5>
                <div class="row">
                    <div class="col">
                        <h4 class="text-purple">156</h4>
                        <p>Projects</p>
                    </div>
                    <div class="col">
                        <h4 class="text-purple">89</h4>
                        <p>Clients</p>
                    </div>
                    <div class="col">
                        <h4 class="text-purple">12</h4>
                        <p>Awards</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
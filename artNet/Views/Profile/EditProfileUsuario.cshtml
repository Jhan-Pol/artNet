@model artNet.Models.UsuarioViewModel

@if (Model == null)
{
    <div class="alert alert-warning m-4">Usuario no existe.</div>
}
else
{
    <div class="container py-4">
        <h2>Editar Perfil</h2>
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="mb-3"><label>Name</label><input asp-for="Name" class="form-control" /></div>
            <div class="mb-3"><label>LastName</label><input asp-for="LastName" class="form-control" /></div>
            <div class="mb-3"><label>PhotoUrl</label><input asp-for="PhotoUrl" class="form-control" /></div>
            <div class="mb-3"><label>Age</label><input asp-for="Age" class="form-control" /></div>
            <div class="mb-3"><label>City</label><input asp-for="City" class="form-control" /></div>
            <div class="mb-3"><label>Country</label><input asp-for="Country" class="form-control" /></div>
            <div class="mb-3"><label>Phone</label><input asp-for="Phone" class="form-control" /></div>
            <div class="mb-3"><label>Email</label><input asp-for="Email" class="form-control" /></div>
            <button type="submit" class="btn btn-success">Guardar</button>
        </form>
    </div>
}
